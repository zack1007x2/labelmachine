<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <RelativeLayout
        android:id="@+id/rl_head_declare_detect_switch"
        android:layout_width="match_parent"
        app:layout_heightPercent="30%" >

        <TextView
            android:id="@+id/tv_head_declare_detect_switch"
            style="@style/table_declare_title_textview_title"
            android:text="@string/system_setting_head_declare_title_detect_switch" />
    </RelativeLayout>

    <android.support.percent.PercentRelativeLayout
        android:id="@+id/rl_type_accelerate_distance"
        android:layout_width="match_parent"
        android:layout_below="@id/rl_head_declare_detect_switch"
        app:layout_heightPercent="70%" >
        
        <RelativeLayout 
            android:id="@+id/rl_divider_1"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            app:layout_widthPercent="2.5%" 
            ></RelativeLayout>
        <ToggleButton
            android:id="@+id/toggle_detect_label_miss"
            style="@style/system_setting_main_table_item_toggle_btn"
            app:layout_heightPercent="80%"
            app:layout_widthPercent="30%" 
            android:textOff="@string/system_setting_item_title_detect_label_miss_off"
            android:textOn="@string/system_setting_item_title_detect_label_miss_on"
            android:layout_toRightOf="@id/rl_divider_1"
            android:layout_toEndOf="@id/rl_divider_1"
            />
        <RelativeLayout 
            android:id="@+id/rl_divider_2"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            app:layout_widthPercent="2.5%" 
            android:layout_toRightOf="@id/toggle_detect_label_miss"
            android:layout_toEndOf="@id/toggle_detect_label_miss"
            ></RelativeLayout>
        <ToggleButton
            android:id="@+id/toggle_detect_no_ribbon"
            style="@style/system_setting_main_table_item_toggle_btn"
            app:layout_heightPercent="80%"
            app:layout_widthPercent="30%" 
            android:textOff="@string/system_setting_item_title_detect_no_ribbon_off"
            android:textOn="@string/system_setting_item_title_detect_no_ribbon_on"
            android:layout_toRightOf="@id/rl_divider_2"
            android:layout_toEndOf="@id/rl_divider_2"
            />
        
        <RelativeLayout 
            android:id="@+id/rl_divider_3"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            app:layout_widthPercent="2.5%" 
            android:layout_toRightOf="@id/toggle_detect_no_ribbon"
            android:layout_toEndOf="@id/toggle_detect_no_ribbon"
            ></RelativeLayout>
        <ToggleButton
            android:id="@+id/toggle_detect_bottle_dim"
            style="@style/system_setting_main_table_item_toggle_btn"
            app:layout_heightPercent="80%"
            app:layout_widthPercent="30%"
            android:textOff="@string/system_setting_item_title_detect_bottle_dim_off"
            android:textOn="@string/system_setting_item_title_detect_bottle_dim_on"
            android:layout_toRightOf="@id/rl_divider_3"
            android:layout_toEndOf="@id/rl_divider_3"
             />
        <RelativeLayout 
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            app:layout_widthPercent="2.5%" 
            android:layout_toRightOf="@id/toggle_detect_bottle_dim"
            android:layout_toEndOf="@id/toggle_detect_bottle_dim"
            ></RelativeLayout>
    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>