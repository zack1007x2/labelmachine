<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/rl_head_declare_type_accelerate"
        android:layout_width="match_parent"
        app:layout_heightPercent="50%" >

        <TextView
            android:id="@+id/tv_head_declare_title_type_accelerate"
            style="@style/table_declare_title_textview_title"
            android:text="@string/system_setting_head_declare_title_type_accelerate" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_type_accelerate_distance"
        android:layout_width="match_parent"
        android:layout_below="@id/rl_head_declare_type_accelerate"
        app:layout_heightPercent="50%" >

        <TextView
            android:id="@+id/tv_type_accelerate_distance"
            style="@style/table_item_textview_title"
            android:text="@string/system_setting_item_title_type_accelerate_distance" />

        <EditText
            android:id="@+id/et_type_accelerate_distance"
            style="@style/table_item_edittext_normal"
            android:layout_toEndOf="@+id/tv_type_accelerate_distance"
            android:layout_toRightOf="@+id/tv_type_accelerate_distance"
            android:inputType="numberDecimal"
             />
    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>