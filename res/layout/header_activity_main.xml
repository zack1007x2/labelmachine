<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_70"
    android:layout_alignParentEnd="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentRight="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/top_bg_g" >

    <ImageView
        android:id="@+id/img_ico"
        android:layout_width="@dimen/size_40"
        android:layout_height="@dimen/size_40"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/size_20"
        android:layout_marginStart="@dimen/size_20"
        android:layout_marginTop="@dimen/size_20"
        android:src="@drawable/head_icon" />

    <TextView
        android:id="@+id/tv_model_title"
        style="@style/main_titlebar_text_title"
        android:layout_alignTop="@id/img_ico"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginStart="@dimen/size_10"
        android:layout_toEndOf="@+id/img_ico"
        android:layout_toRightOf="@+id/img_ico"
        android:text="@string/main_titlebar_machine_model_title" />

    <TextView
        android:id="@+id/tv_model_content"
        style="@style/main_titlebar_text_content"
        android:layout_alignLeft="@+id/tv_model_title"
        android:layout_alignStart="@+id/tv_model_title"
        android:layout_below="@+id/tv_model_title"
        android:text="CVC 330-UP" />

    <LinearLayout
        android:id="@+id/ll_divider"
        android:layout_width="@dimen/size_1"
        android:layout_height="@dimen/size_40"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginLeft="@dimen/size_50"
        android:layout_marginStart="@dimen/size_50"
        android:layout_marginTop="@dimen/size_20"
        android:layout_toEndOf="@+id/tv_model_content"
        android:layout_toRightOf="@+id/tv_model_content"
        android:background="@color/color_text_input_white"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/tv_current_memory_num_title"
        style="@style/main_titlebar_text_title"
        android:layout_alignTop="@+id/ll_divider"
        android:layout_marginLeft="@dimen/size_10"
        android:layout_marginStart="@dimen/size_10"
        android:layout_toEndOf="@+id/ll_divider"
        android:layout_toRightOf="@+id/ll_divider"
        android:text="@string/main_titlebar_current_memory_num_title" />

    <TextView
        android:id="@+id/tv_current_memory_num"
        style="@style/main_titlebar_text_content"
        android:layout_alignLeft="@id/tv_current_memory_num_title"
        android:layout_alignStart="@id/tv_current_memory_num_title"
        android:layout_below="@id/tv_current_memory_num_title"
        tools:text="50" />
    
    <LinearLayout
        android:id="@+id/ll_machine_status_divider"
        android:layout_width="@dimen/size_1"
        android:layout_height="@dimen/size_40"
        android:layout_marginBottom="@dimen/size_10"
        android:layout_marginRight="@dimen/size_10"
        android:layout_marginEnd="@dimen/size_10"
        android:layout_marginTop="@dimen/size_20"
        android:layout_toStartOf="@+id/tv_current_machine_status_title"
        android:layout_toLeftOf="@+id/tv_current_machine_status_title"
        android:background="@color/color_text_input_white"
        android:orientation="vertical" >
    </LinearLayout>

    <TextView
        android:id="@+id/tv_current_machine_status_title"
        style="@style/main_titlebar_text_title"
        android:layout_alignTop="@+id/ll_machine_status_divider"
        android:layout_marginEnd="@dimen/size_50"
        android:layout_marginRight="@dimen/size_50"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="@string/main_titlebar_current_machine_status_title" />

    <TextView
        android:id="@+id/tv_current_machine_status"
        style="@style/main_titlebar_text_content"
        android:layout_alignLeft="@id/tv_current_machine_status_title"
        android:layout_alignStart="@id/tv_current_machine_status_title"
        android:layout_below="@id/tv_current_machine_status_title"
        tools:text="50" />

</RelativeLayout>