<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_white">

    <RelativeLayout
        android:id="@+id/rl_declare_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_heightPercent="12.5%" >

        <TextView
            android:id="@+id/tv_head_declare_title"
            style="@style/table_declare_title_textview_title"
            android:text="@string/speed_param_setting_head_declare_title_left"
            android:textColor="@color/color_title_text_blue"
            android:textSize="@dimen/text_size_m" />
    </RelativeLayout>
    
    <include 
        android:id="@+id/table_content_left"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/speed_param_setting_main_table_content_left"
        android:layout_below="@id/rl_declare_title"
        />
</android.support.percent.PercentRelativeLayout>