<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/rl_head_declare_squeeze_bottle"
        android:layout_width="match_parent"
        app:layout_heightPercent="33.33%" >

        <TextView
            android:id="@+id/tv_head_declare_title_squeeze_bottle"
            style="@style/table_declare_title_textview_title"
            android:text="@string/system_setting_head_declare_title_squeeze_bottle" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_squeeze_motion_delay"
        android:layout_width="match_parent"
        android:layout_below="@id/rl_head_declare_squeeze_bottle"
        app:layout_heightPercent="33.33%" >

        <TextView
            android:id="@+id/tv_squeeze_motion_delay"
            style="@style/table_item_textview_title"
            android:text="@string/system_setting_item_title_motion_delay" />

        <EditText
            android:id="@+id/et_squeeze_motion_delay"
            style="@style/table_item_edittext_normal"
            android:layout_alignBaseline="@+id/tv_squeeze_motion_delay"
            android:layout_toEndOf="@+id/tv_squeeze_motion_delay"
            android:layout_toRightOf="@+id/tv_squeeze_motion_delay"
            android:inputType="numberDecimal"
             />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_squeeze_reset_delay"
        android:layout_width="match_parent"
        android:layout_below="@id/rl_squeeze_motion_delay"
        app:layout_heightPercent="33.33%" >

        <TextView
            android:id="@+id/tv_squeeze_reset_delay"
            style="@style/table_item_textview_title"
            android:text="@string/system_setting_item_title_reset_delay" />

        <EditText
            android:id="@+id/et_squeeze_reset_delay"
            style="@style/table_item_edittext_normal"
            android:layout_alignBaseline="@+id/tv_squeeze_reset_delay"
            android:layout_toEndOf="@+id/tv_squeeze_reset_delay"
            android:layout_toRightOf="@+id/tv_squeeze_reset_delay" 
            android:inputType="numberDecimal"
            />
    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>