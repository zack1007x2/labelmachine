    </style>
    
    <style name="header_fragment_common_rl_icon_right" >
        <item name="android:layout_width">@dimen/size_100</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd" tools:ignore="NewApi">true</item>
        <item name="android:addStatesFromChildren">true</item>
    </style>
    
